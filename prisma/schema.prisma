datasource db {
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
    id String @id @default(cuid())
    createAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title String
    content String @db.VarChar(1204)
    status TicketStatus @default(OPEN)
    deadline String
    bounty Int
    userId String
    user User @relation(fields:[userId],references:[id],onDelete:Cascade)

}

model User{
  id String @id @default(cuid())
  username String @unique
  email String @unique
  passwordHash String
  session Session[]
  tickets Ticket[]
}

model Session{
  id String @id 
  userId String
  expiresAt DateTime
  user User @relation(fields:[userId],references:[id],onDelete:Cascade)
  @@index([userId])
}

enum TicketStatus{
    OPEN
    IN_PROGRESS
    CLOSED
}